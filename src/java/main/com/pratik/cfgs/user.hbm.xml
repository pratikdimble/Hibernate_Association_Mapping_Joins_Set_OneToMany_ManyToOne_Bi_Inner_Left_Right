 <!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.pratik.domain.User" table="user_tableOTM_BI">
		<id name="userId" column="user_id" > <!-- Singular Identifier Cfg -->
		<generator class="increment"/>
		</id>
		<property name="firstName"  column="first_name"/>
		<set name="phones" cascade="all"  lazy="extra" inverse="true">
		   <key column="unid"/>
		   <one-to-many class="com.pratik.domain.PhoneNumber"/>
		</set>
	</class>
</hibernate-mapping>
